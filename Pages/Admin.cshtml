@page
@using static Microsoft.AspNetCore.Mvc.RazorPages.PageBase;
@using System.Text.RegularExpressions;
@model AdminModel
@{
    ViewData["Title"] = "Admin Page";
}
@inject SQLStuff s
@if (HttpContext.Session.GetInt32("IsAdmin") == 1)
{
<h1>@ViewData["Title"]</h1>

<table>
    <thead><tr><td>User ID</td><td>Username</td><td>Email</td><td>Session ID</td><td>Session Token</td><td>Are they Admin?</td></tr></thead>
    <tbody>
        <!-- will look like below: -->
        <!--<tr><td>0</td><td>Dummy</td><td>dummy@gmail.com</td><td>true</td></tr>-->
        <!-- for loop to display sql table -->
        @{
            string[][] info = s.GrabAccountsTable();
            foreach(string[] row in info)
            {
                <tr><td>@row[0]</td><td>@row[2]</td><td>@row[1]</td><td>@row[4]</td><td>@row[5]</td><td>@row[6]</td></tr>
            }
        }
    </tbody>
    </table>
}
else
{
    <h1>Nothing here!</h1>
    <p>Nothing at all! Nothing at all!</p>
}